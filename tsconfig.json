{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@cgi/core/*": ["./src/cgi/*"],
      "@cgi/openapi/*": ["./src/openapi/*"]
    }
  },
  "include": [
    "./src/**/*.ts"
    // "!./src/**/*.test.ts",
    // "!./src/**/*.mock.ts"
  ],
  "ts-node": {
    "files": true
  }
}
